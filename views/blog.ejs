<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="./css/materialize.min.css">
    <title>blog</title>
    <style>
        .y_card + .y_card{
            margin-left: 20px;
        }
        .admin{
            min-height: 600px;
            margin-top: 30px;
        }
        .jq_bg_img{
            height: 150px;
            background-size: cover;
            background-position: top center;
        }
        .card .card-title{
            font-size: 1.2rem;
        }
    </style>
</head>
<body >

<%include Header.ejs%>
<div class="admin">

    <div class="container">
        <div class="row">
            <% blog.forEach(function (t) {%>


            <div class="col  y_card s12 m3 l2">
                <div class="card">
                    <a href="/blog/user-<%= t.author%>/<%= t.title%>/<%= t._id%>">
                        <div class="card-image waves-effect waves-block waves-light jq_bg_img" style="background-image: url('./upload/<%= t.img%>');"></div>
                    </a>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4 truncate" style="max-height: 48px"><%= t.title%></span>
            <span class="truncate"><%= t.date%></span>
        </div>
             <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= t.title%><i class="material-icons right">close</i></span>
            <p>详细信息</p>
            <p>作者: <%= t.author%></p>
            <a href='/blog/user-<%= t.author%>/<%= t.title%>/<%= t._id%>'>进入</a>

            </div>
        </div>
    </div>
           <% })%>

        </div>

    </div>





</div>




</body>

<script src="./js/jquery.js"></script>
<script src="./js/materialize.min.js"></script>
<script>

    $(".button-collapse").sideNav();

    $(document).ready(function(){
        $('.slider').slider({full_width: true});
    });

</script>
</html>